{
  "name": "browser-storage",
  "version": "0.1.0",
  "publish": {
    "include": ["README.md", "deno.json"],
    "exclude": ["*.test.ts"]
  },
  "exports": {
    "./web-storage": "./src/web-storage.ts"
  },
  "license": "LGPL-2.1-or-later",
  "include": [
    "src/"
  ],
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "camelcase",
        "eqeqeq",
        "explicit-module-boundary-types",
        "no-console",
        "no-eval",
        "no-slow-types"
      ]
    }
  },
  "tasks": {
    "dev": "deno run --watch main.ts",
    "test:unit": "deno test --coverage=\"coverage\"",
    "gen-docs": "rm -rf docs && deno doc --html --output=\"docs\" src/"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/testing": "jsr:@std/testing@1"
  }
}
